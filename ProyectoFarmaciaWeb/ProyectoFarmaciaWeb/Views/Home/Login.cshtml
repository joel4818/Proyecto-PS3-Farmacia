
@{
    ViewBag.Title = "Login";
}
<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/css/style.css">

</head>
<body>
    @{
        if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-danger">@ViewBag.Message</div>
        }
    }
    <div class="wrapper fadeInDown">
        <div id="formContent">
            <h2 class="active"> Iniciar Sesión </h2>

            <div class="fadeIn first">
                <img src="~/img/logo.png" id="icon" alt="User Icon" />
            </div>

            <form action="/Home/Loguearse" method="post">
                <input type="text" id="login" class="fadeIn second" name="email" placeholder="Usuario" />
                <input type="password" id="password" class="fadeIn third" name="password" placeholder="Contraseña" />
                <input type="submit" class="fadeIn fourth ingresar" value="Ingresar" /><br />
            </form>
            <div id="formFooter">
                <a class="underlineHover" href="/Usuarios/Create">Registrarse</a>
            </div>
        </div>
    </div>
</body>
</html>
