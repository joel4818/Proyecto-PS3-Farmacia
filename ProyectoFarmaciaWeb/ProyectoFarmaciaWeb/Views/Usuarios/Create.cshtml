@model ProyectoFarmaciaWeb.Models.Usuarios

@{
    ViewBag.Title = "Create";
}

<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/css/style.css">

</head>
<body>

    @Html.AntiForgeryToken()
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-danger">@ViewBag.Message</div>
    }

    <div class="wrapper fadeInDown">
        <div id="formContent">

            <h2 class="active"> Registrarse </h2>

            <div class="fadeIn first">
                <img src="~/img/logo.png" id="icon" alt="User Icon" />
            </div>

            <form action="/Usuarios/Create" method="post">

                <input type="text" id="login" class="fadeIn second" name="Nombre_Usuario" placeholder="Email" />
                <input type="password" id="password" class="fadeIn third" name="Contrasenia" placeholder="Contraseña" />
                <input type="hidden" class="fadeIn fourth" name="Codigo_Tipo_Usuario" value="Cliente" disabled />
                <input type="submit" class="fadeIn five" value="Registrar" />

            </form>
            <div id="formFooter">
                <a class="underlineHover" href="/Home/Login">Regresar</a>
            </div>
        </div>
    </div>

</body>
</html>